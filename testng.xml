<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Suite" parallel="tests">

  <listeners>
    <listener class-name="com.enterprise.TestComponents.Listeners"/>
  </listeners>

  <test name="Standalone Test" thread-count="5">
    <classes>
      <class name="com.enterprise.tests.StandAloneTest"/>
    </classes>
  </test>

  <test name="Submit Order Test" thread-count="5">
    <classes>
      <class name="com.enterprise.tests.SubmitOrderTest"/>
    </classes>
  </test>

  <test name="Error Validation Test" thread-count="5">
    <classes>
      <class name="com.enterprise.tests.ErrorValidation"/>
    </classes>
  </test>

</suite>
